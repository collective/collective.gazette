<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">

<dl class="portlet portletGazette"
    i18n:domain="collective.poll">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <tal:header i18n:translate="portletheading_gazette">Gazette</tal:header>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem"
        tal:define="gazette view/gazette_content">
        
        <form method="post"
              enctype="multipart/form-data"
              tal:attributes="action string:${gazette/absolute_url}/subscription">
              
            <label for="email">E-mail:</label>
            <input type="text" name="form.widgets.email" value="" id="email" />
            
            <div class="formControls">
                <input class="context"
                       type="submit"
                       name="submit"
                       value="Submit"
                       i18n:attributes="value button_submit" />
            </div>
        </form>


    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</html>
